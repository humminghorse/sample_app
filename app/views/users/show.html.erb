<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <%= @user.email %>
  <br>
  <%= 'created_at: ' + @user.created_at.strftime("%a %b %d %H:%M:%S %z %Y") %><%= ', updated_at: ' + @user.updated_at.strftime("%a %b %d %H:%M:%S %z %Y") %>
  <br>
  <%= Time.now %>,
</div>